<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:background="#007AFF" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back" />

        <LinearLayout
            android:id="@+id/sspp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:background="@drawable/search01"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btn_sp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search02" />
        </LinearLayout>

        <EditText
            android:id="@+id/e_lms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/sspp"
            android:layout_toRightOf="@+id/btn_back"
            android:background="@drawable/search"
            android:hint="내용을 입력해주세요."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="25dp"
            android:textColor="#ffffff"
            android:textColorHint="#DCDCDC"
            android:textSize="17dp"
            android:typeface="sans" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomview_11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bottomview_l"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#007AFF"
            android:padding="10dp"
            android:text="내역"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/bottomview_c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#007AFF"
            android:padding="10dp"
            android:text="엑셀"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/bottomview_r"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#007AFF"
            android:padding="10dp"
            android:text="닫기"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottomview_11"
        android:layout_below="@+id/view1" >

        <LinearLayout
            android:id="@+id/view22"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lms_main_tap"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#d0D3D3D3"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="폰 주소록"
                    android:textSize="13dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#D3D3D3" />

                <Button
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="서버 주소록" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/lms_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:hint="문자를 입력해주세요." />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="번호를 입력해주세요." />

                    <Button
                        android:id="@+id/number_plus"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="+" />

                    <Button
                        android:id="@+id/exel_plus"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="+"
                        android:visibility="gone" />
                </LinearLayout>
                <ListView
                android:id="@+id/list_number"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:divider="#dfdede"
                android:dividerHeight="1dp" >
            </ListView>

            <Button
                android:id="@+id/send_lms"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="발송" />
            </LinearLayout>

            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>